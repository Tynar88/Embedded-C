#include <stdio.h>


typedef struct {
	char 	data1;
	int 	data2;
	char 	data3;
	short 	data4;
	} DATASET_t;


int main(void)
{
	DATASET_t data;

	data.data1 = 0x11;
	data.data2 = 0xFFFFEEEE;
	data.data3 = 0x22;
	data.data4 = 0xABCD;


	DATASET_t *pData = &data;

	//modify the 1st element
	*ptr = 0x55;

	//modify the 2nd element



	uint32_t totalSize = sizeof(DATASET_t);

	printf("Memory address      Content\n");
	printf("===============================\n");
	for(uint32_t i = 0 ; i<totalSize ; i++)
	{
		printf("%p,         %X\n",ptr,*ptr);
		ptr++;
	}

	printf("Total memory consumed = %lu\n",sizeof(DATASET_t));

	getchar();
	return 0;
}


